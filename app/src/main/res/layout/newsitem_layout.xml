<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/Widget.Material3.CardView.Elevated"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:background="#888888"
    app:cardCornerRadius="8dp">



    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp">


        <ImageView

            android:id="@+id/newsImage"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_margin="3dp"
            tools:ignore="NotSibling" />

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/txtview_style"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="16dp"
            android:layout_below="@+id/newsImage"
            android:text="hello world"
            android:textColor="?attr/colorAccent" />


        <TextView
            android:id="@+id/tv_headline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_publish"
            android:layout_marginBottom="3dp"
            android:padding="5dp"
            android:text="this is headline"
            android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_des"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_headline"
            android:layout_marginBottom="9dp"
            android:padding="5dp"
            android:text="this is description" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_des"
            android:layout_margin="4dp"
            android:orientation="horizontal">


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnReadMore"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#12000000"
                android:text="Read more"
                android:textColor="?attr/colorAccent"
                android:textSize="12sp"
                app:icon="@drawable/ic_chat"
                app:iconTint="?attr/colorAccent"

                />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnshare"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#12000000"
                android:text="share"
                android:textColor="?attr/colorAccent"
                android:textSize="12sp"
                app:icon="@drawable/ic_share"
                app:iconTint="?attr/colorAccent" />


            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnsave"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#12000000"
                android:textSize="12dp"
                android:text="save"
                android:textColor="?attr/colorAccent"
                />



        </LinearLayout>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>